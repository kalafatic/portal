/* src/main/webapp/css/theme.css */
body {
    background-color: #f0f8ff; /* AliceBlue */
    margin: 0;
    padding: 0;
    font-family: Arial, sans-serif;
}

header {
    background-color: #add8e6; /* LightBlue */
    color: white;
    text-align: center;
    padding: 1em 0;
}

main {
    padding: 20px;
}

section {
    margin-bottom: 20px;
    background-color: #ffffff; /* White */
    border: 1px solid #ddd;
    padding: 15px;
    border-radius: 8px;
}

footer {
    text-align: center;
    padding: 1em 0;
    background-color: #add8e6; /* LightBlue */
    color: white;
}
